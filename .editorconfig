root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Indentation override for all JS
[**.js]
indent_style = space
indent_size = 2
quote_type = single

# Indentation override for all VUE
[**.vue]
indent_style = space
indent_size = 2
quote_type = single

# Indentation override for all TS
[**.ts]
indent_style = space
indent_size = 2
quote_type = single
